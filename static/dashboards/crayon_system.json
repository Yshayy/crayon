{
    "id": "crayon_system",
    "sidebarText": "Crayon System",
    "header": "Crayon System Status Live Dashboard",
    "defaultGraphOpts": {
        "noLegend": true,
        "width": 500,
        "height": 100,
        "gapInSeconds": 10,
        "connectSeparatedPoints": false,
        "fillGraph": true,
        "aggregative": "max",
        "stackedGraph": true
    },
    "defaultDataSourceOpts": {
        "tailSecondsInterval": 60,
        "unit": "r",
        "from": "last 5 minutes",
        "component": "crayon*",
        "server": "$crayon-server"
    },
    "dataSources": [{
        "name": "AddRaw_message_bytes",
        "id": "messageSizes"
    }],
    "graphs": [{
        "dataSources": [{
            "name": "API_call_ms_to_/addRaw"
        }],
        "graphOpts": {
            "stackedGraph": false,
            "title": "Max Insert Time (live)"
        }
    }, {
        "dataSources": [{
            "name": "Inserts"
        }],
        "calculatedDataSources": [{
            "match": {
                "name": ".*"
            },
            "name": "Total Inserts",
            "aggregationFunction": "sum",
            "insteadOfMatches": true
        }],
        "graphOpts": {
            "aggregative": "sum",
            "title": "Inserts Per Second (live)"
        }
    }, {
        "dataSources": ["messageSizes"],
        "calculatedDataSources": [{
            "match": {
                "name": ".*"
            },
            "name": "Incoming Bytes",
            "aggregationFunction": "sum",
            "insteadOfMatches": true
        }],
        "graphOpts": {
            "aggregative": "sum",
            "title": "Bytes Per Second (live)"
        }
    }, {
        "dataSources": ["messageSizes"],
        "graphOpts": {
            "aggregative": "ave",
            "stackedGraph": false,
            "title": "Average message size (live)"
        }
    }, {
        "dataSources": [{
            "component": "*",
            "server": "metric1",
            "name": "crayon_cpu"
        }],
        "graphOpts": {
            "title": "Max CPU Per Second (Live)"
        }
    }, {
        "dataSources": [{
            "name": "folder-creations-attempts"
        }],
        "graphOpts": {
            "title": "Folder creation attempts"
        }
    }, {
        "dataSources": [{
            "name": "rabbitMQ_messages"
        }],
        "graphOpts": {
            "stackedGraph": true,
            "title": "Rabbit MQ messages /s"
        }
    }, {
        "dataSources": [{
            "name": "graphite_API_messages"
        }],
        "graphOpts": {
            "stackedGraph": true,
            "title": "Graphite API messages /s"
        }
    }, {
        "dataSources": [{
            "name": "Query_Plan_Execution_ms"
        }],
        "graphOpts": {
            "title": "Max Query Plan Execution ms"
        }
    }, {
        "dataSources": [{
            "name": "Errors_Logged"
        }],
        "graphOpts": {
            "title": "Total Errors Logged /s"
        }
    }, {
        "dataSources": [{
            "name": "Raw_Archive_ms"
        }],
        "graphOpts": {
            "title": "Raw Archive ms"
        }
    }, {
        "dataSources": [{
            "name": ".*_Aggregation_ms"
        }],
        "graphOpts": {
            "title": "Aggregation ms"
        }
    }]
}