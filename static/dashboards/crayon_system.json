{
    "id": "crayon_system",
    "sidebarText": "Crayon System",
    "header": "Crayon System Status Live Dashboard",
    "defaultGraphOpts": {
        "noLegend": true,
        "width": 500,
        "height": 100,
        "gapInSeconds": 10,
        "connectSeparatedPoints": false,
        "fillGraph": true,
        "aggregative": "max",
        "stackedGraph": true,
        "untilNow": true
    },
    "defaultDataSourceOpts": {
        "tailSecondsInterval": 60,
        "unit": "r",
        "from": "last 5 minutes",
        "component": "crayon*",
        "server": "$crayon-server"
    },
    "dataSources": [{
        "name": "AddRaw_message_bytes",
        "id": "messageSizes"
    }],
    "graphs": [{
        "dataSources": [{
            "name": "API_call_ms_to_/addRaw"
        }],
        "graphOpts": {
            "stackedGraph": false,
            "title": "Max Insert Time"
        }
    }, {
        "dataSources": [{
            "name": "Inserts"
        }],
        "calculatedDataSources": [{
            "match": {
                "name": ".*"
            },
            "name": "Total Inserts",
            "aggregationFunction": "sum",
            "insteadOfMatches": true
        }],
        "graphOpts": {
            "aggregative": "sum",
            "title": "Data Points /s",
            "lineStyles": [{
                "match": ".*",
                "color": "green"
            }]
        }
    }, {
        "dataSources": ["messageSizes"],
        "calculatedDataSources": [{
            "match": {
                "name": ".*"
            },
            "name": "Incoming Bytes",
            "aggregationFunction": "sum",
            "insteadOfMatches": true
        }],
        "graphOpts": {
            "aggregative": "sum",
            "title": "Incoming Bytes /s"
        }
    }, {
        "dataSources": ["messageSizes"],
        "graphOpts": {
            "aggregative": "ave",
            "stackedGraph": false,
            "title": "Average message size"
        }
    }, {
        "dataSources": [{
            "name": "Crayon_Host_CPU"
        }],
        "graphOpts": {
            "connectSeparatedPoints": true,
            "gapInSeconds": 20,
            "title": "Crayon Host CPU /s",
            "lineStyles": [{
                "match": ".*",
                "color": "red"
            }]
        }
    }, {
        "dataSources": [{
            "name": "folder-creations-attempts"
        }],
        "graphOpts": {
            "title": "Folder creation attempts"
        }
    }, {
        "dataSources": [{
            "name": "rabbitMQ_messages"
        }],
        "graphOpts": {
            "stackedGraph": true,
            "title": "Rabbit MQ messages /s"
        }
    }, {
        "dataSources": [{
            "name": "(Total_Rows_Scanned|Committed_Aggregated_Rows)",
            "component": "crayonAggregation*"
        }],
        "calculatedDataSources": [{
            "match": {
                "name": "Total_Rows_Scanned"
            },
            "insteadOfMatches": true,
            "name": "Scanned Rows"
        }, {
            "match": {
                "name": "Committed_Aggregated_Rows"
            },
            "insteadOfMatches": true,
            "name": "Aggregated Rows"
        }],
        "graphOpts": {
            "aggregative": "sum",
            "gapInSeconds": 10,
            "stackedGraph": false,
            "title": "Aggregation"
        }
    }, {
        "dataSources": [{
            "name": "Query_Plan_Execution_ms"
        }],
        "graphOpts": {
            "title": "Max Query Plan Execution ms"
        }
    }, {
        "dataSources": [{
            "name": "Errors_Logged"
        }],
        "graphOpts": {
            "title": "Total Errors Logged /s"
        }
    }, {
        "dataSources": [{
            "name": "Raw_Archive_ms"
        }],
        "graphOpts": {
            "title": "Raw Archive ms"
        }
    }, {
        "dataSources": [{
            "name": "graphite_API_messages"
        }],
        "graphOpts": {
            "stackedGraph": true,
            "title": "Graphite API messages /s"
        }
    }]
}